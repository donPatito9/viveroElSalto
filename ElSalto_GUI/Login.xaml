<Window x:Class="ElSalto_GUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElSalto_GUI"
        mc:Ignorable="d"
        Title="Login" Height="325" Width="450">
    <Grid>
        <Label x:Name="lblUsername" Content="Ingrese Usuario" HorizontalAlignment="Left" Margin="65,63,0,0" VerticalAlignment="Top"/>

        <Label x:Name="lblPassword" Content="Ingrese Contraseña" HorizontalAlignment="Left" Margin="65,123,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="240,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.833,0.448"/>

        <PasswordBox HorizontalAlignment="Left" Margin="240,126,0,0" VerticalAlignment="Top" Width="120" x:Name="txtPassword" RenderTransformOrigin="0.708,0.837"/>

        <Button x:Name="btnLogin" Content="Iniciar Sesión" HorizontalAlignment="Left" Margin="185,214,0,0" VerticalAlignment="Top" Click="btnLogin_Click" Height="30" Width="100"/>

        <Label x:Name="lblMensaje" Content="" HorizontalAlignment="Left" Margin="100,177,0,0" VerticalAlignment="Top" Foreground="Red"/>

    </Grid>
   
</Window>
